// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String
  email        String?
  createdAt    DateTime @default(now())

  // Relations for future use
  matchesAsPlayer       MatchPlayer[]
  createdMatches        Match[]        @relation("MatchCreator")
  wonMatches            Match[]        @relation("MatchWinner")
  friendRequestsSent    FriendRequest[] @relation("FriendRequestFrom")
  friendRequestsReceived FriendRequest[] @relation("FriendRequestTo")
  friendshipsAsA        Friendship[]    @relation("FriendshipUserA")
  friendshipsAsB        Friendship[]    @relation("FriendshipUserB")

  @@map("users")
}

model Match {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  endedAt   DateTime?
  winnerId  String?
  creatorId String

  creator   User          @relation("MatchCreator", fields: [creatorId], references: [id])
  players   MatchPlayer[]
  winner    User?         @relation("MatchWinner", fields: [winnerId], references: [id])

  @@map("matches")
}

model MatchPlayer {
  id      String @id @default(cuid())
  matchId String
  userId  String

  match Match @relation(fields: [matchId], references: [id], onDelete: Cascade)
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([matchId, userId])
  @@map("match_players")
}

// Friend request flow (Variant B): request -> accept -> friendship
model FriendRequest {
  id         String   @id @default(cuid())
  fromUserId String
  toUserId   String
  status     String   @default("pending") // pending | accepted | rejected | canceled
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  fromUser User @relation("FriendRequestFrom", fields: [fromUserId], references: [id], onDelete: Cascade)
  toUser   User @relation("FriendRequestTo", fields: [toUserId], references: [id], onDelete: Cascade)

  @@unique([fromUserId, toUserId])
  @@map("friend_requests")
}

// Normalized pair: userAId = min(a,b), userBId = max(a,b)
model Friendship {
  id        String   @id @default(cuid())
  userAId   String
  userBId   String
  createdAt DateTime @default(now())

  userA User @relation("FriendshipUserA", fields: [userAId], references: [id], onDelete: Cascade)
  userB User @relation("FriendshipUserB", fields: [userBId], references: [id], onDelete: Cascade)

  @@unique([userAId, userBId])
  @@map("friendships")
}
